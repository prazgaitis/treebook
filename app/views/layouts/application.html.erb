<!DOCTYPE html>
<html>
<head>
  <title>Treebook</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <link rel="icon" type="image/ico" href="/assets/images/fakebook.ico"/>
</head>
<body>
<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
	<a href="../statuses" class="navbar-brand">fakebook</a>
		<ul class="nav navbar-nav">
			<li class="active"><%= link_to "Timeline", statuses_path %></li>
		</ul>
		<ul class="nav navbar-nav navbar-right">
			<% if user_signed_in? %>
				<li><%= link_to current_user.full_name, edit_user_registration_path %></li>
				<li><%= link_to "Log Out", destroy_user_session_path, method: :delete %>
			<% else %>
				<li><%= link_to "Register", new_user_registration_path %>
				<li><%= link_to "Login", new_user_session_path %>
			<% end %>
		</ul>
 </nav>

<div class="container">

	<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

	<%= yield %>
</div>


</body>
</html>
